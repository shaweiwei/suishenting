<!--pages/list/list.wxml-->
<view>
  <scroll-view
     scroll-y style="height: 100%"
     bindscroll="scroll"
     scroll-into-view="view{{toView}}">
    <view>
      <view wx:for="{{songlist}}"
            class="list-group"
            wx:key="index"
            id="view{{index}}">
        <view class="left-view">
          <image class="img" src="{{item.diagram}}"> </image>
        </view>
        <view class="right-view">
          <view class="name">{{item.name}}</view>
          <view class="content">{{item.title}}</view>
        </view>
      </view>
    </view>
    <!-- <view class="loading-container" wx:if="{{!songlist.length}}">
      <loading></loading>
    </view> -->
  </scroll-view>
</view>
